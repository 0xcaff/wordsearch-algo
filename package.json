{
  "name": "wordsearch-algo",
  "description": "A collection of algorithms for solving wordsearches.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xcaff/wordsearch-algo.git"
  },
  "main": "lib/index.js",
  "files": [ "lib/" ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.1",
    "benchmark": "^2.1.4",
    "eslint": "^4.10.0",
    "eslint-plugin-jest": "^21.2.0",
    "jest": "^21.2.1"
  },
  "scripts": {
    "compile": "babel --out-dir lib src --copy-files",
    "test": "jest",
    "lint": "eslint . --ext js",
    "benchmark": "node lib/search/benchmark.js"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "jest"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest/globals": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017
    },
    "rules": {
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/valid-expect": "error",
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-warning-comments": [
        "warn"
      ],
      "no-console": "warn"
    }
  }
}
